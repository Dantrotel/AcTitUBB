# Usar imagen oficial de Node.js m치s liviana
FROM node:18-alpine

# Instalar dependencias del sistema necesarias para producci칩n
RUN apk add --no-cache \
    curl \
    bash \
    mysql-client \
    && rm -rf /var/cache/apk/*

# Crear usuario no-root para seguridad
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001

WORKDIR /app

# Copiar archivos de dependencias y instalar
COPY package*.json ./
RUN npm ci --only=production && npm cache clean --force

# Copiar c칩digo fuente
COPY . .

# Crear directorio de uploads y dar permisos
RUN mkdir -p uploads/propuestas && chown -R nodejs:nodejs /app

# Cambiar al usuario no-root
USER nodejs

EXPOSE 3000

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3000/health || exit 1

# Usar comando de producci칩n
CMD ["npm", "start"]


