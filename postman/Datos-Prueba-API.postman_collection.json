					"name": "Crear Propuesta - Sistema Inventario",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.propuesta && jsonData.propuesta.id) {",
									"        pm.environment.set('propuestaId', jsonData.propuesta.id);",
									"        console.log('ID propuesta guardado:', jsonData.propuesta.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
