# Alternativa m치s simple si el Dockerfile principal falla
FROM node:20-alpine AS builder

# Instalar dependencias del sistema
RUN apk add --no-cache git python3 make g++

WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar Angular CLI globalmente
RUN npm install -g @angular/cli@latest

# Instalar dependencias con flags menos restrictivos
RUN npm install --legacy-peer-deps

# Copiar c칩digo fuente
COPY . .

# Construir usando Angular CLI directamente
RUN ng build --configuration=production

# Etapa de producci칩n con nginx
FROM nginx:alpine

# Instalar curl
RUN apk add --no-cache curl

# Copiar archivos construidos
COPY --from=builder /app/dist/frontend/browser /usr/share/nginx/html

# Copiar configuraci칩n de nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Dar permisos
RUN chown -R nginx:nginx /usr/share/nginx/html && \
    chown -R nginx:nginx /var/cache/nginx && \
    chown -R nginx:nginx /var/log/nginx && \
    chown -R nginx:nginx /etc/nginx/conf.d
RUN touch /var/run/nginx.pid && chown -R nginx:nginx /var/run/nginx.pid

# Cambiar al usuario nginx
USER nginx

EXPOSE 80

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:80/ || exit 1

# Comando para ejecutar nginx
CMD ["nginx", "-g", "daemon off;"]